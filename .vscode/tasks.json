{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "python",
            "args": ["-m", "pip", "install", "Flask==2.3.3", "Flask-CORS==4.0.0", "pandas==2.1.4", "requests==2.31.0", "Werkzeug==2.3.7", "openpyxl==3.1.2", "numpy==1.24.4"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Start Dashboard",
            "type": "shell",
            "command": "python",
            "args": ["dashboard/app.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Start Form Backend",
            "type": "shell",
            "command": "python",
            "args": ["form.py"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Start Both Backends",
            "dependsOrder": "parallel",
            "dependsOn": ["Start Dashboard", "Start Form Backend"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Create Directories",
            "type": "shell",
            "command": "python",
            "args": ["-c", "import os; os.makedirs('campus/uploads', exist_ok=True); os.makedirs('dashboard/uploads', exist_ok=True); print('âœ… Directories created')"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
